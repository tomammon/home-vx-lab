{% include 'salttemplates/common/managed_by_salt.j2' %}
{% include 'salttemplates/common/interface_notes.j2' %}

auto lo
iface lo inet loopback
    address 10.100.1.3/32

auto eth0
iface eth0 inet dhcp
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    address ::1/128
    vrf-table auto

auto swp1
iface swp1
    address 192.168.13.3/24

auto swp2
iface swp2
    address 192.168.23.3/24

auto swp3
iface swp3
    address 172.16.1.3/24

auto swp4
iface swp4
    address 172.16.2.3/24

auto swp5
iface swp5
    address 172.16.3.3/24

auto swp6
iface swp6
    bridge-access 20

auto swp7
iface swp7
    address 10.1.103.3/24

auto bridge
iface bridge
    bridge-ports swp6 vni-2020
    bridge-vids 20
    bridge-pvid 1
    bridge-vlan-aware yes

auto vni-2020
iface vni-2020
    bridge-access 20
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 2020
    vxlan-local-tunnelip 10.100.1.3
    vxlan-remoteip 10.100.1.5
    bridge-learning on
