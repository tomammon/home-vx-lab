{% include 'salttemplates/common/managed_by_salt.j2' %}
{% include 'salttemplates/common/interface_notes.j2' %}

auto lo
iface lo inet loopback
    address 10.100.1.5/32

auto eth0
iface eth0 inet dhcp
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    address ::1/128
    vrf-table auto

auto swp1
iface swp1
    address 192.168.15.5/24

auto swp2
iface swp2
    address 192.168.25.5/24

auto swp3
iface swp3
    bridge-access 20

auto swp4
iface swp4
    address 10.5.103.5/24

auto swp5
iface swp5
    bridge-access 30

auto bridge
iface bridge
    bridge-ports swp3 swp5 vni-2020 vni-2030
    bridge-vids 20 30
    bridge-pvid 1
    bridge-vlan-aware yes

auto vni-2020
iface vni-2020
    bridge-access 20
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 2020
    vxlan-local-tunnelip 10.100.1.5
    vxlan-remoteip 10.100.1.3
    bridge-learning on

auto vni-2030
iface vni-2030
    bridge-access 30
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 2030
    vxlan-local-tunnelip 10.100.1.5
    vxlan-remoteip 10.100.1.7
    bridge-learning on

